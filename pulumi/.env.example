# Environment Configuration
ENVIRONMENT=staging  # Options: staging, production

# EKS Cluster Configuration
CLUSTER_VERSION=1.32
EKS_ADMIN_ROLE_ARN=
EKS_ADMIN_USER_ARN=arn:aws:iam::711921764356:user/devsecops

# Staging Environment Settings
STAGING_INSTANCE_TYPE=t3.medium
STAGING_MIN_SIZE=1
STAGING_MAX_SIZE=3
STAGING_DESIRED_SIZE=2
STAGING_NAT_GATEWAYS=1

# Production Environment Settings
PRODUCTION_INSTANCE_TYPE=m5.large
PRODUCTION_MIN_SIZE=2
PRODUCTION_MAX_SIZE=10
PRODUCTION_DESIRED_SIZE=3
PRODUCTION_NAT_GATEWAYS=3

# Node Group Configuration
NODE_DISK_SIZE=100
NODE_VOLUME_TYPE=gp3
NODE_AMI_TYPE=AL2_x86_64  # Options: AL2_x86_64, AL2023_x86_64_STANDARD, BOTTLEROCKET_x86_64, AL2_ARM_64, AL2023_ARM_64_STANDARD, BOTTLEROCKET_ARM_64

# VPC Configuration
VPC_MAX_AZS=3
VPC_CIDR=10.0.0.0/16

# Enable/Disable Features
ENABLE_VPC_ENDPOINTS=true
ENABLE_CLUSTER_LOGGING=true
ENABLE_PUBLIC_ENDPOINT=true
ENABLE_PRIVATE_ENDPOINT=true

# Resource Naming
CLUSTER_NAME_PREFIX=eks-cluster

# Tags
TAG_PROJECT=EKS-Pulumi
TAG_MANAGED_BY=Pulumi
TAG_COST_CENTER=engineering